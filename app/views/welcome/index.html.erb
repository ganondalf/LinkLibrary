<div class='container'>
  <div class="sixteen columns" id="welcome">
    <h1>Welcome to LinkLibrary</h1>
      <button><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %></button>
      <button id='signup_button'><%= link_to 'Create Account', new_user_path %>
        <div class='newUserFormDiv'>
          <%= render 'users/form' %>
        </div>
      <button id='login_button'><%= link_to 'Log In', new_session_path %>
        <div class='returningUserFormDiv'>
          <%= render 'sessions/form' %>
        </div>
  </div>
</div>


