<div class="container">
  <div class="six columns">
    <h1>LinkLibrary</h1>
  </div>

  <div class="ten columns" id="nav">
    <ul>
      <li><%= link_to "Manage Your Collections", user_collections_path(@user) %></li>
      <li><a href='#'>About LinkLibrary</a></li>
      <li><a href='#'>Contact Us</a></li>
      <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
    </ul>
  </div>
  <div class="sixteen columns" id="subnav">
    <p>Hello, <strong><%= @user.name || @user.first_name %></strong>!</p>
  </div>

  <div class='sixteen columns' id='main_body'>
    <section class='eight columns' class='optionMenu'>
      <div id='linkLibrary'>
        <h3>View Your Link Libraries</h3>
      </div>

      <div id='addLinksDiv'>
        <h3>Create New Link</h3>
      </div>

      <div id='addedLinksDiv'>
        <h3>Recently Added Links</h3>
          <ul>
            <li>
              <% @user.links.each do |link|%>
              Title: <a href='<%= link.url %>'><%= link.title %></a>
              <% end %>
            </li>
          </ul>
      </div>

    </section>

    <section class='eight columns' class='viewOptions'>
      <div id='displayChoice'>
        <ul id="menu">
          <%=render 'collections/menu', :user => @user %>
        </ul>
          <%= render 'links/form', :user => @user %>
      </div>
    </section>
  </div>
</div> <!-- closes container class  -->






