<div class="container">
  <div class="six columns">
    <h1>LinkLibrary</h1>
  </div>

  <div class="ten columns" id="nav">
    <ul>
      <li><%= link_to "Manage Your Collections", user_collections_path(@user) %></li>
      <li><a href='#'>About LinkLibrary</a></li>
      <li><a href='#'>Contact Us</a></li>
      <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
    </ul>
  </div>
  <div class="sixteen columns" id="subnav" class='<%= current_user.id %>'>
    <p>Hello, <strong><%= current_user.name || current_user.first_name %></strong>!</p>
  </div>

  <div class='sixteen columns' id='main_body'>
    <div class='eight columns' id='linkLibrary'>
      <h3>View Your Link Libraries</h3>
      <ul id="menu">
            <%=render 'collections/menu' %>
      <ul>
    </div>
    <div class='eight columns' class='userLinks'>
      <div class='eight columns' id='addLinksDiv'>
      <h3>Create New Link</h3>
        <%= render 'links/form' %>
      <div class= 'eight columns' id='addedLinksDiv'>
        <h3>Recently Added Links</h3>
      </div>
    </div>
  </div>
</div> <!-- closes container class  -->






